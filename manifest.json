{
    "manifest_version": 3,
    "name": "Screen Recorder Extension",
    "version": "1.0",
    "description": "Record your screen and send to a backend server.",
    "permissions": [
        "activeTab",
        "storage",
        "desktopCapture",
        "identity"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "host_permissions": [
        "https://video-api-5wh1.onrender.com/api/*"
    ],
    "background": {
        "service_worker": "background.js"
    }
}