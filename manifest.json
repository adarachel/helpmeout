{
    "manifest_version": 3,
    "name": "Screen Recorder Extension",
    "version": "1.0",
    "description": "Chrome Extension for Screen Recording",
    "permissions": [
        "activeTab",
        "storage",
        "desktopCapture",
        "identity"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "host_permissions": [
        "https://video-api-5wh1.onrender.com/api/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    }
}