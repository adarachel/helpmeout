{
    "manifest_version": 3,
    "name": "Screen Recorder Extension",
    "version": "1.0",
    "description": "Record your screen and send to a backend server.",
    "permissions": [
        "activeTab",
        "storage",
        "desktopCapture",
        "identity"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Screen Recorder"
    },
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    }
}